{
  "enabled": true,
  "file_extensions": {
    "python": {
      "extensions": [".py", ".pyx", ".pyi"],
      "hooks": ["ruff", "ruff-format", "mypy"]
    },
    "javascript": {
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".mjs"],
      "hooks": ["eslint", "prettier"]
    },
    "yaml": {
      "extensions": [".yaml", ".yml"],
      "hooks": ["check-yaml", "yamllint"]
    },
    "json": {
      "extensions": [".json"],
      "hooks": ["check-json", "prettier"]
    },
    "markdown": {
      "extensions": [".md", ".mdx"],
      "hooks": ["markdownlint"]
    },
    "shell": {
      "extensions": [".sh", ".bash"],
      "hooks": ["shellcheck", "shfmt"]
    },
    "dockerfile": {
      "extensions": ["Dockerfile", ".dockerfile"],
      "hooks": ["hadolint"]
    },
    "rust": {
      "extensions": [".rs"],
      "hooks": ["rustfmt", "clippy"]
    },
    "go": {
      "extensions": [".go"],
      "hooks": ["gofmt", "golint"]
    },
    "cpp": {
      "extensions": [".cpp", ".cc", ".c", ".h", ".hpp"],
      "hooks": ["clang-format"]
    }
  },
  "hook_commands": {
    "ruff": ["ruff", "check", "--fix", "{file}"],
    "ruff-format": ["ruff", "format", "{file}"],
    "mypy": ["mypy", "{file}"],
    "eslint": ["eslint", "--fix", "{file}"],
    "prettier": ["prettier", "--write", "{file}"],
    "check-yaml": ["python", "-m", "yamllint", "{file}"],
    "check-json": ["python", "-m", "json.tool", "{file}"],
    "markdownlint": ["markdownlint", "--fix", "{file}"],
    "shellcheck": ["shellcheck", "{file}"],
    "shfmt": ["shfmt", "-w", "{file}"],
    "hadolint": ["hadolint", "{file}"],
    "rustfmt": ["rustfmt", "{file}"],
    "clippy": ["cargo", "clippy", "--", "{file}"],
    "gofmt": ["gofmt", "-w", "{file}"],
    "golint": ["golint", "{file}"],
    "clang-format": ["clang-format", "-i", "{file}"]
  },
  "skip_on_missing_hook": true,
  "max_file_size_kb": 1024
}